{
  "name": "cs732-example-fullstack-typescript",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "backend",
    "common",
    "frontend"
  ],
  "scripts": {
    "setup": "npm i && npm i --workspaces",
    "init-db": "npm run init-db --workspace backend",
    "dev": "concurrently -c \"cyan.bold,magenta.bold\" \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:backend": "npm run dev --workspace backend",
    "dev:frontend": "npm run dev --workspace frontend",
    "lint": "prettier . --write && eslint --fix . --cache"
  },
  "dependencies": {
    "@zodyac/zod-mongoose": "^4.1.0",
    "common": "file:common",
    "dayjs": "^1.11.10",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-dom": "^1.52.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-react-x": "^1.52.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
